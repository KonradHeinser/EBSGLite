<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef ParentName="EBSG_MechControlBase">
        <defName>EBSG_BadMechControl</defName>
        <label>weak mech control</label>
        <iconPath>EBSG/Gene_BadMechControl</iconPath>
        <description>Carriers of this gene have issues controlling large numbers of mechs at the same time.</description>
        <displayOrderInCategory>42</displayOrderInCategory>
        <biostatMet>1</biostatMet>
        <statFactors>
            <MechBandwidth>0.67</MechBandwidth>
        </statFactors>
    </GeneDef>

    <GeneDef ParentName="EBSG_MechControlBase">
        <defName>EBSG_MechControl</defName>
        <label>strong mech control</label>
        <iconPath>EBSG/Gene_MechControl</iconPath>
        <description>Carriers of this gene have improved mech control capabilities, allowing them to control more mechs at the same time.</description>
        <displayOrderInCategory>44</displayOrderInCategory>
        <biostatMet>-2</biostatMet>
        <statFactors>
            <MechBandwidth>1.50</MechBandwidth>
        </statFactors>
        <statOffsets>
            <GeneralLaborSpeed>-0.2</GeneralLaborSpeed>
            <SmeltingSpeed>-0.2</SmeltingSpeed>
            <CleaningSpeed>-0.2</CleaningSpeed>
        </statOffsets>
    </GeneDef>

    <GeneDef ParentName="EBSG_MechControlBase">
        <defName>EBSG_ExtremeMechControl</defName>
        <label>extremely strong mech control</label>
        <iconPath>EBSG/Gene_ExtremeMechControl</iconPath>
        <description>Carriers of this gene have extremely improved mech control capabilities, allowing them to control more mechs at the same time.</description>
        <displayOrderInCategory>46</displayOrderInCategory>
        <biostatMet>-4</biostatMet>
        <biostatCpx>2</biostatCpx>
        <statFactors>
            <MechBandwidth>2.00</MechBandwidth>
        </statFactors>
        <statOffsets>
            <GeneralLaborSpeed>-0.4</GeneralLaborSpeed>
            <SmeltingSpeed>-0.4</SmeltingSpeed>
            <CleaningSpeed>-0.4</CleaningSpeed>
            <MechControlGroups>1</MechControlGroups>
        </statOffsets>
    </GeneDef>
</Defs>