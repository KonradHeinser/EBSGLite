<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef Name="EBSG_Crusader" Abstract="True">
        <displayCategory>EBSG_AnomalyGenes</displayCategory>
        <exclusionTags>
            <li>EBSG_Crusader</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef ParentName="EBSG_Crusader">
        <defName>EBSG_AbsoluteHeathen</defName>
        <label>absolute heathen</label>
        <description>Carriers of this gene instinctively believe that there's no harm in letting the void visit our reality, and this belief causes them to refuse to suppress entities.</description>
        <displayOrderInCategory>100</displayOrderInCategory>
        <iconPath>EBSG/EBSG_AbsoluteHeathen</iconPath>
        <biostatMet>3</biostatMet>
        <statFactors>
            <ActivitySuppressionRate>0</ActivitySuppressionRate>
        </statFactors>
    </GeneDef>

    <GeneDef ParentName="EBSG_Crusader">
        <defName>EBSG_Crusader</defName>
        <label>crusader</label>
        <description>Carriers of this gene instinctively seek to stop the darkness that creeps out from the void, making them better at suppressing anomalies.</description>
        <displayOrderInCategory>104</displayOrderInCategory>
        <iconPath>EBSG/EBSG_Crusader</iconPath>
        <biostatMet>-2</biostatMet>
        <statFactors>
            <ActivitySuppressionRate>1.5</ActivitySuppressionRate>
        </statFactors>
    </GeneDef>

    <GeneDef ParentName="EBSG_Crusader">
        <defName>EBSG_ExceptionalCrusader</defName>
        <label>exceptional crusader</label>
        <description>Carriers of this gene instinctively seek to stop the invaders from the void, making them exceptionally good at suppressing anomalies.</description>
        <displayOrderInCategory>106</displayOrderInCategory>
        <iconPath>EBSG/EBSG_ExceptionalCrusader</iconPath>
        <biostatMet>-4</biostatMet>
        <biostatCpx>2</biostatCpx>
        <statFactors>
            <ActivitySuppressionRate>2.0</ActivitySuppressionRate>
        </statFactors>
    </GeneDef>

    <!--Thrown into this mod instead of the archite mod this time because it felt more efficient in terms of load time. 
    I'm assuming Anomaly Genes will be the ones least used, so instead of doing the check in EAG, I'm doing a check for EAG here.-->

    <GeneDef ParentName="EBSG_Crusader" MayRequire="EBSG.Archite">
        <defName>EBSG_ArchiteEnhancedCrusader</defName>
        <label>archite enhanced crusader</label>
        <description>Carriers of this gene have a small number of archites throughout their bodies that assist with suppressing entities.</description>
        <displayOrderInCategory>110</displayOrderInCategory>
        <iconPath>EBSG/EBSG_ExceptionalCrusader</iconPath>
        <biostatArc>2</biostatArc>
        <biostatCpx>6</biostatCpx>
        <statFactors>
            <ActivitySuppressionRate>3</ActivitySuppressionRate>
        </statFactors>
    </GeneDef>
</Defs>
