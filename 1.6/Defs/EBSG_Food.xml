<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneCategoryDef>
        <defName>EBSG_Food</defName>
        <label>eating</label>
        <displayPriorityInXenotype>500.01</displayPriorityInXenotype>
    </GeneCategoryDef>

    <GeneDef>
        <defName>EBSG_FrailStomach</defName>
        <label>frail stomach</label>
        <description>Carriers of this gene have a digestive system that cannot process toxins properly, making them more weak against potential food poisoning.</description>
        <iconPath>EBSG/Gene_WeakStomach</iconPath>
        <foodPoisoningChanceFactor>2</foodPoisoningChanceFactor>
        <biostatMet>2</biostatMet>
        <displayCategory>EBSG_Food</displayCategory>
        <displayOrderInCategory>8.6</displayOrderInCategory>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>weak</symbol></li>
                <li><symbol>fast</symbol></li>
                <li><symbol>vomit</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
                <li><symbol>sick</symbol></li>
            </suffixSymbols>
        </symbolPack>
        <exclusionTags>
            <li>EBSG_StrongStomachs</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef>
        <defName>EBSG_ExpandedStomach</defName>
        <label>expanded stomach</label>
        <description>Carriers of this gene have pouches attached to their stomach that can help store more food in exchange for inhibiting their stomach's ability to digest properly.</description>
        <iconPath>EBSG/Gene_ExpandedStomach</iconPath>
        <biostatMet>-2</biostatMet>
        <displayCategory>EBSG_Food</displayCategory>
        <displayOrderInCategory>9.5</displayOrderInCategory>
        <statFactors>
            <MaxNutrition>2.0</MaxNutrition>
        </statFactors>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>multi</symbol></li>
                <li><symbol>pouch</symbol></li>
            </prefixSymbols>
        </symbolPack>
        <exclusionTags>
            <li>EBSG_StomachPouches</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef>
        <defName>EBSG_SmallerStomach</defName>
        <label>smaller stomach</label>
        <description>Carriers of this gene have little pouches attached to their stomach that can help digest food more efficiently in exchange for taking up room that would normally be used to store food.</description>
        <iconPath>EBSG/Gene_ContractedStomach</iconPath>
        <biostatMet>1</biostatMet>
        <displayCategory>EBSG_Food</displayCategory>
        <displayOrderInCategory>9.3</displayOrderInCategory>
        <statFactors>
            <MaxNutrition>0.9</MaxNutrition>
        </statFactors>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>effic</symbol></li>
                <li><symbol>absorb</symbol></li>
            </prefixSymbols>
        </symbolPack>
        <exclusionTags>
            <li>EBSG_StomachPouches</li>
        </exclusionTags>
    </GeneDef>
</Defs>
