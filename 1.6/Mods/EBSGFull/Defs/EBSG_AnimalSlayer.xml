<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef Name="EBSG_AnimalSlayerBase" Abstract="True">
        <displayCategory>EBSG_Slayer</displayCategory>
        <exclusionTags>
            <li>EBSG_AnimalSlayer</li>
        </exclusionTags>
    </GeneDef>

    <GeneDef ParentName="EBSG_AnimalSlayerBase">
        <defName>EBSG_BadAnimalSlayer</defName>
        <label>bad animal slayer</label>
        <description>Carriers of this gene have issues when trying to kill animals, either because of a special wiring in their brains telling them to not take the lives of animals, or just general inexplicable physical incapability not yet explained by science.</description>
        <iconPath>EBSG/Gene_BadAnimalSlayer</iconPath>
        <displayOrderInCategory>304</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>1</biostatMet>
        <statFactors>
            <EBSG_OutgoingDamageFactor_Animal>0.8</EBSG_OutgoingDamageFactor_Animal>
        </statFactors>
    </GeneDef>

    <GeneDef ParentName="EBSG_AnimalSlayerBase">
        <defName>EBSG_GoodAnimalSlayer</defName>
        <label>good animal slayer</label>
        <description>Carriers of this gene instinctively know a lot of the weak points of any animal they fight, making it easier to kill them.</description>
        <iconPath>EBSG/Gene_GoodAnimalSlayer</iconPath>
        <displayOrderInCategory>306</displayOrderInCategory>
        <biostatCpx>1</biostatCpx>
        <biostatMet>-2</biostatMet>
        <statFactors>
            <EBSG_OutgoingDamageFactor_Animal>1.30</EBSG_OutgoingDamageFactor_Animal>
        </statFactors>
    </GeneDef>

    <GeneDef ParentName="EBSG_AnimalSlayerBase">
        <defName>EBSG_ExtremelyGoodAnimalSlayer</defName>
        <label>extremely good animal slayer</label>
        <description>Carriers of this gene instinctively know every weak point of any animal they fight, making it significantly easier to kill them.</description>
        <iconPath>EBSG/Gene_ExtremelyGoodAnimalSlayer</iconPath>
        <displayOrderInCategory>308</displayOrderInCategory>
        <biostatCpx>2</biostatCpx>
        <biostatMet>-4</biostatMet>
        <statFactors>
            <EBSG_OutgoingDamageFactor_Animal>1.60</EBSG_OutgoingDamageFactor_Animal>
        </statFactors>
    </GeneDef>
</Defs>
